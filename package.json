{
  "name": "@networkpro/dev-sveltekit",
  "private": false,
  "sideEffects": false,
  "version": "0.10.1",
  "description": "Locking Down Networks, Unlocking Confidence | Security, Networking, Privacy â€” Network Pro Strategies",
  "keywords": [
    "security",
    "networking",
    "privacy",
    "cybersecurity",
    "advisory",
    "consulting",
    "android",
    "linux",
    "blog",
    "development"
  ],
  "homepage": "https://dev.netwk.pro",
  "bugs": {
    "url": "https://github.com/netwk-pro/netwk-pro.github.io/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/netwk-pro/dev-sveltekit.git"
  },
  "license": "CC-BY-4.0 OR GPL-3.0-or-later",
  "author": {
    "name": "Scott Lopez",
    "email": "github@sl.neteng.cc",
    "url": "https://bio.neteng.pro"
  },
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "main": "src/app.html",
  "style": "src/lib/styles/global.css",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "build:netlify": "netlify build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
    "clean": "rm -rf build/* node_modules package-lock.json && npm install",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint --ext .mjs,.js,.svelte --config eslint.config.mjs .",
    "lint:fix": "eslint --ext .mjs,.js,.svelte --config eslint.config.mjs . --fix",
    "lint:md": "npx markdownlint-cli2 \"**/*.{md,markdown}\" \"#node_modules/**\" \"#build/**\"",
    "lint:css": "stylelint \"**/*.{css,svelte}\" --ignore-path .stylelintignore",
    "lint:all": "npm run lint && npm run lint:md && npm run lint:css && npm run format",
    "test": "npm run test:all",
    "test:all": "npm run test:client -- --run && npm run test:server -- --run",
    "test:client": "vitest --config vitest.config.client.js",
    "test:server": "vitest --config vitest.config.server.js",
    "test:watch": "vitest --config vitest.config.client.js --watch",
    "test:coverage": "npm run test:client -- --run --coverage && npm run test:server -- --run --coverage",
    "bundle-css": "node scripts/singleBundleCss.js",
    "bundle-css:multiple": "node scripts/multipleBundleCss.js",
    "prebuild": "npm run bundle-css",
    "checkout": "npm run test:all && npm run lint:all && npm run check"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.18.0",
    "@playwright/test": "^1.52.0",
    "@sveltejs/adapter-netlify": "^5.0.2",
    "@sveltejs/kit": "^2.20.8",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.4",
    "@vitest/coverage-v8": "^3.1.3",
    "autoprefixer": "^10.4.21",
    "browserslist": "^4.24.5",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-jsdoc": "^50.6.14",
    "eslint-plugin-svelte": "^3.6.0",
    "globals": "^16.0.0",
    "jsdom": "^26.0.0",
    "lightningcss": "^1.30.1",
    "lightningcss-cli": "^1.30.1",
    "markdownlint": "^0.38.0",
    "markdownlint-cli2": "^0.17.2",
    "mdsvex": "^0.12.5",
    "normalize.css": "^8.0.1",
    "postcss": "^8.5.3",
    "postcss-html": "^1.8.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "stylelint": "^16.19.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recommended": "^16.0.0",
    "stylelint-order": "^7.0.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "svelte-eslint-parser": "^1.1.3",
    "svelte-preprocess": "^6.0.3",
    "typescript": "^5.0.0",
    "vite": "^6.2.6",
    "vite-plugin-lightningcss": "^0.0.5",
    "vitest": "^3.0.0"
  }
}
