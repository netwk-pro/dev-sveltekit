		"stylelint-order": "^7.0.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"svelte-eslint-parser": "^1.1.3",
		"svelte2tsx": "^0.7.37",
		"typescript": "^5.0.0",
		"vite": "^6.2.6",
		"vitest": "^3.0.0"
	}
