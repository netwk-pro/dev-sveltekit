		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"jsdom": "^26.0.0",
		"markdownlint": "^0.38.0",
		"markdownlint-cli2": "^0.17.2",
		"mdsvex": "^0.12.5",
		"postcss": "^8.5.3",
		"postcss-html": "^1.8.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
